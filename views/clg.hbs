{{#if user}}
<div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
  <h1>Formulaire renseigné</h1>
</div>
<form id="billetForm" role="form" class="form-horizontal pull-right" action="validate" method="post" >
  <div class="form-group">
    <div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
        <div class="input-group">
            <span class="input-group-addon hidden-xs">#</span>
            <input disabled id="triG" name="triG" type="text" class="form-control" value={{user.triG}}>
        </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
        <div class="input-group">
            <span class="input-group-addon hidden-xs">#</span>
            <input disabled id="avis" name="avis" type="text" class="form-control" value={{user.sentence}}>
        </div>
    </div>
  </div>
</form>
{{else}}
  <div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
    <h1>Formulaire non renseigné</h1>
  </div>
  <form id="billetForm" role="form" class="form-horizontal pull-right" action="validate" method="post" >
    <div class="form-group">
      <div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
          <div class="input-group">
              <span class="input-group-addon hidden-xs">#</span>
              <input id="triG" name="triG" type="text" class="form-control" placeholder="triG">
          </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
          <div class="input-group">
              <span class="input-group-addon hidden-xs">#</span>
              <input id="avis" name="avis" type="text" class="form-control" placeholder="Avis">
          </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xs-12 col-sm-9 col-sm-offset-1 form-contact-container col-lg-offset-2 col-md-offset-2">
        <button type="submit" class="btn btn-primary" id="submitFormButton">Enregistrer</button>
    </div>
  </form>
{{/if}}
